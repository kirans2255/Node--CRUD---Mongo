<body>
    <header>

    </header>

    <section>
        <form action="/login" method="POST" class="form" id="fi-name">

            <h2>E-mail</h2>
            <input type="email" placeholder="Enter Email" id="email" name="email">
            <small id="emailError" style="color: red;"></small>

            <h2>Password</h2>
            <input type="password" placeholder="Enter Password" id="password" name="password"><br>
            <small id="passError" style="color: red;"></small>

            <% if (error) { %>
                <div style="color: red; margin-bottom: 10px;"><%= error %></div>
            <% } %><br>

            <button type="submit" id="submit">Log in</button><br><br>
            <small id="sm"><b>Dont have an Account?</b></small>
            <a href="/signin" id="sn" onclick="signin()">Sign Up</a>


            <small id="error" style="color: red;"></small>
        </form>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const submitButton = document.querySelector("#submit");

            submitButton.addEventListener('click', (event) => {
                let email = document.querySelector("#email").value;
                let password = document.querySelector("#password").value;

                let isemailValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
                let ispasswordValid = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$/.test(password);

                if (!isemailValid) {
                    document.querySelector("#emailError").innerHTML = "Invalid Format";
                    event.preventDefault();  // Prevent form submission
                } else {
                    document.querySelector("#emailError").innerHTML = "";
                }

                if (!ispasswordValid) {
                    document.querySelector("#passError").innerHTML = "Password must be at least 8 characters, and contain at least one uppercase letter, one lowercase letter, and one digit.";
                    event.preventDefault();  // Prevent form submission
                } else {
                    document.querySelector("#passError").innerHTML = "";
                }
                const errorMessage = document.querySelector("#error");
            });
        });

        function signin() {
            window.location.href = '/signin';
        }
    </script>
</body>

